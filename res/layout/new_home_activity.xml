<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:gravity="center"
    android:weightSum="4"
    android:background="@drawable/background">
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/badgeScreen"
        android:text="Badge Room"
        android:background="@drawable/info_hub_button"
        android:textColor="@color/white"
        android:layout_margin="10dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/rapidFire"
        android:background="@drawable/info_hub_button"
        android:textColor="@color/white"
        android:text="Rapid Fire"
        android:layout_margin="10dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/mythFact"
        android:background="@drawable/info_hub_button"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:text="Myth Vs Fact"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/medicineStore"
        android:background="@drawable/info_hub_button"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:text="Medicine Store"/>
</LinearLayout>